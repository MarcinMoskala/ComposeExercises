<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeExercises"
        tools:targetApi="31">
        <activity
            android:name=".sample.interop.ComposeInXmlActivity"
            android:exported="true"  />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeExercises">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.basics.MainActivity"
            android:exported="true" />
        <activity
            android:name=".sample.basics.themes.ThemedActivity"
            android:exported="true" />
        <activity android:name=".sample.navigation.SettingsActivity" />
        <activity
            android:name=".sample.navigation.SampleFragmentActivity"
            android:exported="true" />
        <activity
            android:name=".sample.interop.ComposeInActivityActivity"
            android:exported="true" />
        <activity
            android:name=".sample.interop.ComposeInFragmentActivity"
            android:exported="true" />
        <activity
            android:name=".sample.interop.FragmentInComposeActivity"
            android:exported="true" />
    </application>

</manifest>